{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
	<div class="container">
		{% for link in links %}
			<div class="row border">
			    <h2 class="col-md-4"><a class="linkTitle" href="{{ path('link', { 'id': link.id }) }}">{{ link.title }}</a></h2>
			    <p class="col-md-4">{{ link.desc }}</p>
				<div class="col-md-2">
			    	<em>(by {{ link.user.username }})</em>

			    	{% for tag in link.tags %}
			    		<a href="{{ path('tag', { 'id': tag.id }) }}" title="Filtrer">
			    		{{ tag.title }}
			    		</a>
			   		{% endfor %}
				</div>
				<div class="col-md-2">
					<a href="{{ link.url }}" title="" target="_blank" class="btn btn-primary">Open ></a>
				</div>
				
			</div>
		{% endfor %}
	</div>
	
{% endblock %}
